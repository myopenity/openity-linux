/dts-v1/;

#include "imx6q.dtsi"
#include "imx6qdl-var-som.dtsi"

/ {
	model = "SnapCap Variscite i.MX6 QUAD/DUAL VAR-SOM-MX6";
	compatible = "fsl,imx6q-var-som", "fsl,imx6q";

    leds {
        pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_snapcap_gpio_output>;
        compatible = "gpio-leds";

        shutdown {
            label = "shutdown";
            gpios = <&gpio2 14 GPIO_ACTIVE_HIGH>;
            default-state = "on";
        };

        host-usb-en {
            label = "host-usb-en";
            gpios = <&gpio1 9 GPIO_ACTIVE_HIGH>;
            default-state = "on";
        };

        otg-usb-en {
            label = "otg-usb-en";
            gpios = <&gpio1 1 GPIO_ACTIVE_HIGH>;
            default-state = "on";
        };

        fan-ctl {
            label = "fan-ctl";
            gpios = <&gpio2 9 GPIO_ACTIVE_HIGH>;
            default-state = "off";
        };

        sat-vext-on {
            label = "sat-vext-on";
            gpios = <&gpio1 2 GPIO_ACTIVE_HIGH>;
            default-state = "on";
        };

        sat-dat-dtr {
            label = "sat-dat-dtr";
            gpios = <&gpio5 21 GPIO_ACTIVE_HIGH>;
            default-state = "off";
        };

        sat-ctl-dtr {
            label = "sat-ctl-dtr";
            gpios = <&gpio6 2 GPIO_ACTIVE_HIGH>;
            default-state = "off";
        };

        status-green-1 {
            label = "status-green-1";
            gpios = <&gpio6 4 GPIO_ACTIVE_HIGH>;
            default-state = "off";
        };

        status-green-2 {
            label = "status-green-2";
            gpios = <&gpio6 5 GPIO_ACTIVE_HIGH>;
            default-state = "off";
        };

        test-point-1 {
            label = "test-point-1";
            gpios = <&gpio1 5 GPIO_ACTIVE_HIGH>;
            default-state = "off";
        };

        test-point-2 {
            label = "test-point-2";
            gpios = <&gpio7 11 GPIO_ACTIVE_HIGH>;
            default-state = "off";
        };
    };
};

&cpu0 {
	operating-points = <
		/* kHz    uV */
		1200000	1350000
		996000	1250000
		852000	1250000
		792000	1175000
		396000	1175000
	>;

	fsl,soc-operating-points = <
		/* ARM kHz  SOC-PU uV */
		1200000	1275000
		996000	1250000
		852000	1250000
		792000	1250000
		396000	1250000
	>;
};

&fec {
	phy-reset-on-resume;
};

&i2c2 {
	pmic: pfuze100@08 {
		compatible = "fsl,pfuze100";
		reg = <0x08>;
		regulators {
			sw1a_reg: sw1ab {
				regulator-min-microvolt = <300000>;
				regulator-max-microvolt = <1875000>;
				regulator-boot-on;
				regulator-always-on;
				regulator-ramp-delay = <6250>;
			};
			sw1c_reg: sw1c {
				regulator-min-microvolt = <300000>;
				regulator-max-microvolt = <1875000>;
				regulator-boot-on;
				regulator-always-on;
				regulator-ramp-delay = <6250>;
			};

			sw2_reg: sw2 {
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <3300000>;
				regulator-boot-on;
				regulator-always-on;
			};

			sw3a_reg: sw3a {
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <3950000>;
				regulator-boot-on;
				regulator-always-on;
			};

			sw3b_reg: sw3b {
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <3950000>;
				regulator-boot-on;
				regulator-always-on;
			};

			sw4_reg: sw4 {
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <3950000>;
			};

			snvs_reg: vsnvs {
				regulator-min-microvolt = <1200000>;
				regulator-max-microvolt = <3000000>;
				regulator-boot-on;
				regulator-always-on;
			};

			vref_reg: vrefddr {
				regulator-boot-on;
				regulator-always-on;
			};

			vgen1_reg: vgen1 {
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1550000>;
			};

			vgen2_reg: vgen2 {
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1550000>;
			};

			vgen3_reg: vgen3 {
                regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <3300000>;
				regulator-always-on;
				regulator-boot-on;
			};

			vgen4_reg: vgen4 {
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <3300000>;
				regulator-always-on;
				regulator-boot-on;
			};

			vgen5_reg: vgen5 {
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <3300000>;
				regulator-always-on;
				regulator-boot-on;
			};

			vgen6_reg: vgen6 {
				regulator-min-microvolt = <2800000>;
				regulator-max-microvolt = <2800000>;
				regulator-always-on;
				regulator-boot-on;
			};
		};
	};
};

&ldb {
	lvds-channel@0 {
		crtc = "ipu2-di0";
	};

	lvds-channel@1 {
		crtc = "ipu2-di1";
	};
};

&mxcfb1 {
	status = "okay";
};

&mxcfb2 {
	status = "okay";
};

&mxcfb3 {
	status = "okay";
};

&mxcfb4 {
	status = "okay";
};

&sata {
	status = "okay";
};
